<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="android:datePickerDialogTheme">@style/ScratchDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/ScratchTimePickerDialogTheme</item>
    </style>

    <style name="ScratchDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/ScratchDatePickerStyle</item>
        <item name="android:colorAccent">@color/black_overlay</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <style name="ScratchDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/green</item>
        <item name="android:dayOfWeekBackground">@color/black</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:yearListSelectorColor">@color/black</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ScratchTimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:timePickerStyle">@style/ScratchTimePickerStyle</item>
        <item name="android:colorAccent">@color/black_overlay</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <style name="ScratchTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/green</item>
        <item name="android:amPmBackgroundColor">@color/black</item>
        <item name="android:amPmTextColor">@color/white</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:datePickerDialogTheme">@style/ScratchDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/ScratchTimePickerDialogTheme</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ScratchNoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:datePickerDialogTheme">@style/ScratchDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/ScratchTimePickerDialogTheme</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="dialog_style" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        
        <item name="android:windowFrame">@null</item>        
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
